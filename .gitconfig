[alias]
    co = checkout
    br = branch
    ci = commit
    st = status
    lg = log --color --graph --pretty=format:'%Cred%h%CCreset -%C(yellow)%d%Creset %s%Cgreen (%cr) %C(bold yellow)<%an>%Creset' --abbrev-commit --date=relative
    lg-nomerge = log --color --graph --pretty=format:'%Cred%h%CCreset -%C(yellow)%d%Creset %s%Cgreen (%cr) %C(bold yellow)<%an>%Creset' --abbrev-commit --date=relative --no-merges
    lg-files = log --color --graph --pretty=format:'%Cred%h%CCreset -%C(yellow)%d%Creset %s%Cgreen (%cr) %C(bold yellow)<%an>%Creset' --abbrev-commit --date=relative --name-only
    outgoing = log @{u}..
    taghistory = log --tags --simplify-by-decoration --pretty='format:%ci %d'
    reflogdate = reflog --date=iso
[color]
    ui = true
    diff = auto
    branch = auto
    status = auto
[user]
    name = Bill Oley
    email = bill.oley@gmail.com
[core]
    excludesfile = /Users/wwoley/.gitignore_global

